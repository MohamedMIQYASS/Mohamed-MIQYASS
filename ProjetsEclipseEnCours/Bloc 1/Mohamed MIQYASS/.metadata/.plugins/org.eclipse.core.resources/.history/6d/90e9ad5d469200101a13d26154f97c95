
import java.util.Scanner;
public class SalaireBrut {

	public static void main(String[] args) {

		// déclaration des variables

		float nbH , tauxH , sBrut;

		Scanner sc = new Scanner(System.in);

		// Saisie des valeurs

		System.out.println("Veuillez saisir le nombre d'heures travaillés : ");
		nbH = sc.nextFloat();

		System.out.println("Veuillez saisir le montant du taux horaire : ");
		tauxH = sc.nextFloat();

		// calcul 

		sBrut = nbH * tauxH;

		// affichage du résultat 

		System.out.println("Montant du salaire brut : " + sBrut);
		
		sc.close();

	}

}S
